<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".methodologie.IntroductionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnSu"
        android:padding="4sp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <in.workarounds.typography.TextView
            android:text="@string/displaySujet"
            app:font_name="Roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSujet"
            android:background="@drawable/styleedittext"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_weight="1"
            android:typeface="serif"
            android:padding="10sp"
            android:layout_gravity="start" />

        <in.workarounds.typography.TextView
            android:id="@+id/txt"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:background="@drawable/styleedittext"
            android:padding="10sp"
            android:text="@string/displaySujet"
            android:textSize="15sp"
            android:textStyle="normal"
            android:typeface="serif"
            app:font_name="Roboto" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:ems="10"
        android:id="@+id/editText"
        android:inputType="textMultiLine"
        android:background="@drawable/edittextstyle"
        android:padding="5sp"
        android:hint="@string/reform"
        android:textSize="15sp"
        android:layout_height="match_parent"
        android:gravity="top"
        android:layout_below="@+id/lnSu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>