<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp">

        <in.workarounds.typography.TextView

            android:id="@+id/matiereName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:padding="2sp"
            app:font_name="Roboto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/matiere"/>

        <in.workarounds.typography.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textCopie"
            android:textColor="@android:color/background_dark"
            app:font_name="Roboto"
            android:textSize="15sp"
            android:padding="5sp"
            android:layout_margin="4sp"
            android:typeface="normal"
            android:layout_marginBottom="2dp"/>

        <ProgressBar
            android:id="@+id/barprogress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:backgroundTint="#000000"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:divider="@drawable/verticaldivider"
            android:layout_height="match_parent"
            android:weightSum="1">

            <in.workarounds.typography.TextView
                android:id="@+id/derniereSaisie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:padding="2sp"
                app:font_name="Roboto" />

            <in.workarounds.typography.TextView
                android:text="@string/continuer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font_name="Roboto"
                android:id="@+id/commencer"
                android:textSize="12sp"
                android:textStyle="normal"
                android:padding="2dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>